<Window x:Class="BindingToMethod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingToMethod"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider>
        </ObjectDataProvider>
    </Window.Resources>

    <Border Margin="5" BorderBrush="Aqua" BorderThickness="1" Padding="8">
        <Grid Margin="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Grid.Row="1" HorizontalAlignment="Right">Enter the degree to convert:</Label>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="tb">
                <TextBox.Text>
                    <Binding Source="{StaticResource }">
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>
    </Border>
</Window>