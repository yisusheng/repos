<Window x:Class="ComplexLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComplexLayout"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <TextBlock Background="LightBlue"
                   DockPanel.Dock="Top">Some Text</TextBlock>
        <TextBlock Background="LightYellow"
                   DockPanel.Dock="Bottom">Some Text</TextBlock>
        <TextBlock Background="Lavender"
                   DockPanel.Dock="Left">Some Text</TextBlock>
        <DockPanel Background="Bisque">
            <StackPanel DockPanel.Dock="Top">
                <Button HorizontalAlignment="Left" Height="30px" Width="100px"
                        Margin="10">Button1</Button>
                <Button HorizontalAlignment="Left" Height="30px" Width="100px"
                        Margin="10">Button2</Button>
            </StackPanel>
            <TextBlock Background="LightGreen">Some Text Below the Buttons</TextBlock>
        </DockPanel>
    </DockPanel>
</Window>
