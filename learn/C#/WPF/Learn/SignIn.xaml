<Window x:Class="Learn.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learn"
        mc:Ignorable="d"
        Title="SignIn" Height="133" Width="350"
        WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid>
        <Label x:Name="label" Content="User Name" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="34,30,0,0" RenderTransformOrigin="0.447,0.115" />
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="34,61,0,0" RenderTransformOrigin="0.5,1.231" />
        <Label x:Name="label2" Content="Please enter your user name and password."
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="34,4,0,0" RenderTransformOrigin="0.342,0.462" />
        <TextBox
            x:Name="textBox" HorizontalAlignment="Left" VerticalAlignment="Top"
            Height="23" Margin="116,30,0,0" Width="212"
            TextWrapping="Wrap" Text="" />
        <PasswordBox
            x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="116,64,0,0" Width="212" />
    </Grid>
</Window>